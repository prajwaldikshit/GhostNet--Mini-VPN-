modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VPN Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "vpn_demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Frontend"

[[workflows.workflow]]
name = "VPN Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python vpn_server.py"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "vpn_demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python vpn_server.py"

[[workflows.workflow]]
name = "Web Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
